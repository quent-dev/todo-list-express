<body>
    <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo List App</title>
</head>
<body>
    <h1>Todo List App</h1>

    <div class="container">
        <div>
        <h2>Add A Todo:</h2>
            <!-- Form to add a new todo item -->
            <form action="/addTodo" method="POST">
                <input type="text" placeholder="Thing To Do" name="todoItem">
                <input type="submit">
            </form>
        </div>

        <!-- Getting the number of items left from the get request -->
        <h2>Left to do: <%= left %></h2>

    </div>
    <!-- List all our todo items from the database -->
    <div class="container">
        <div class="todo-card">
            <h2>Todo</h2>
            <ul class="todoItems todo">
                <% for(let i=0; i < items.length; i++) {%>
                    <% if(items[i].completed !== true) {%>
                        <li class="item">
                            <span><%= items[i].thing %></span>   
                            <span class='fa fa-trash'></span>
                        </li>
                    <% } %> 
                <% } %>
                </ul>
        </div>
        <div class="todo-card">
            <h2>Done</h2>
            <ul class="todoItems done">
                <% for(let i=0; i < items.length; i++) {%>
                    <% if(items[i].completed === true) {%>
                    <li class="item">    
                            <span class='completed'><%= items[i].thing %></span>
                            
                        <span class='fa fa-trash'></span>
                    </li>
                    <% } %> 
                <% } %>
            </ul>
        </div>
    </div>
    
    
    

    
    

    <script src='js/main.js'></script>
</body>
</html>
